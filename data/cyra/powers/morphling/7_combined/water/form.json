{
    "type": "origins:multiple",
    "name": "Aquatic Body",
    "description": "Overworld is within you, granting mobility and water control abilities.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": {
                "text": "Form Stats:",
                "extra": [
                    {
                        "text": "",
                        "color": "green",
                        "extra": [
                            "\nHeal 1 health every 5 seconds",
                            "\nBetter Water Vision",
                            "\n-30% Model Size"
                        ]
                    },
                    {
                        "text": "",
                        "color": "red",
                        "extra": [
                            "\n-20% Movement Speed on Land",
                            "\n+200% Fire Damage Taken"
                        ]
                    }
                ]
            }
        }
    ],
    "attributes": {
        "type": "origins:attribute",
        "update_health": true,
        "modifiers": [
            {
                "attribute": "additionalentityattributes:water_visibility",
                "operation": "multiply_base",
                "value": 1
            }
        ]
    },
    "size": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:delay",
            "ticks": 1,
            "action": {
                "type": "origins:execute_command",
                "command": "function cyra:morphling/size/forms/small"
            }
        },
        "entity_action_removed": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:predicate",
                "predicate": "cyra:entity/origin/morphling/any",
                "inverted": true
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "function cyra:morphling/size/restore_to_default"
            }
        }
    },
    "regeneration": {
        "type": "origins:action_over_time",
        "interval": 100,
        "condition": {
            "type": "origins:relative_health",
            "comparison": "<",
            "compare_to": 1.0
        },
        "entity_action": {
            "type": "origins:heal",
            "amount": 1.0
        }
    },
    "land_speed": {
		"type": "origins:modify_attribute",
		"condition": {
			"type": "origins:or",
			"inverted": true,
			"conditions": [
				{
					"type": "origins:fluid_height",
					"fluid": "minecraft:water",
					"comparison": ">",
					"compare_to": 0.0
				},
				{
					"type": "origins:in_rain"
				}
			]
		},
		"attribute": "minecraft:generic.movement_speed",
		"modifier": {
			"operation": "multiply_base_additive",
			"value": -0.2
		}
	},
    "fire_damage": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:in_tag",
            "tag": "minecraft:is_fire"
        },
        "modifier": {
            "operation": "multiply_base_additive",
            "value": 2
        }
    },
	"forgiving_fall_damage": {
		"type": "origins:modify_damage_taken",
		"damage_condition": {
            "type": "origins:in_tag",
            "tag": "minecraft:is_fall"
		},
		"modifier": {
			"operation": "add_base_early",
			"value": -1
		}
	}
}