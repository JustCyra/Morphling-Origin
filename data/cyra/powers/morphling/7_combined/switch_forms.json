{
    "type": "origins:multiple",
    "name": "Morph Body",
    "description": "Harnessing your new-found control you can toggle between End and Fire Forms.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Toggle ability, use with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": [
                "Charges: 2                        ",
                "\nCharge cooldown: 10 seconds"
            ]
        }
    ],
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 20,
        "start_value": 20,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 21,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": "<",
                "compare_to": 20
            }
        }
    },
    "reset_on_respawn": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:set_resource",
            "resource": "*:*_cooldown",
            "value": 20
        }
    },
    "tick": {
        "type": "origins:action_over_time",
        "interval": 20,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": "<",
            "compare_to": 20
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cooldown",
            "change": 1
        }
    },
    "toggle": {
        "type": "origins:active_self",
        "cooldown": 5,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": false
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": ">=",
            "compare_to": 10
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cooldown",
                    "operation": "add",
                    "change": -10
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:origin",
                        "origin": "cyra:morphling/7_combined/variant/end",
                        "layer": "cyra:variant"
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "origin set @s cyra:variant cyra:morphling/7_combined/variant/fire"
                    },
                    "else_action": {
                        "type": "origins:execute_command",
                        "command": "origin set @s cyra:variant cyra:morphling/7_combined/variant/end"
                    }
                }
            ]
        }
    },
    "defaults": {
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:delay",
            "ticks": 1,
            "action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:or",
                    "inverted": true,
                    "conditions": [
                        {
                            "type": "origins:origin",
                            "origin": "cyra:morphling/7_combined/variant/end",
                            "layer": "cyra:variant"
                        },
                        {
                            "type": "origins:origin",
                            "origin": "cyra:morphling/7_combined/variant/fire",
                            "layer": "cyra:variant"
                        }
                    ]
                },
                "if_action": {
                    "type": "origins:execute_command",
                    "command": "origin set @s cyra:variant cyra:morphling/7_combined/variant/end"
                }
            }
        },
        "entity_action_lost": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:exists"
                    },
                    {
                        "type": "origins:origin",
                        "origin": "cyra:morphling/7_combined/main",
                        "layer": "origins:origin",
                        "inverted": true
                    }
                ]
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "origin set @s cyra:variant origins:empty"
            }
        }
    }
}