{
    "type": "origins:multiple",
    "name": "Blaze Launcher",
    "description": "You can focus and fire 3 small fireball blasts, although the amount of focus required is too great to have perfect aim in the moment.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Active ability, use with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Fires 3 small fireball with a delay of 0.4 seconds"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Cooldown: 6 seconds"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": {
                "text": "Upgrades on ",
                "extra": [
                    {
                        "text": "[",
                        "color": "gray",
                        "extra": [
                            {
                                "text": "Morphling IV",
                                "color": "red"
                            },
                            {
                                "text": "]"
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "ammunition": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "shoot": {
        "type": "origins:action_over_time",
        "interval": 8,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_ammunition",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_ammunition",
                    "operation": "add",
                    "change": -1
                },
                {
                    "type": "apugli:fire_projectile",
                    "entity_type": "minecraft:small_fireball",
                    "tag": "{Tags: [\"morphling_fireball\"]}",
                    "count": 1,
                    "speed": 0.25,
                    "divergence": 15,
                    "sound": "minecraft:entity.blaze.shoot"
                }
            ]
        }
    },
    "trigger": {
        "type": "origins:active_self",
        "cooldown": 120,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 7,
            "condition": {
                "type": "origins:gamemode",
                "gamemode": "spectator",
                "inverted": true
            }
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": false
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.generic.extinguish_fire",
                    "volume": 1.0,
                    "pitch": 1.0
                },
                {
                    "type": "origins:set_resource",
                    "resource": "*:*_ammunition",
                    "value": 3
                }
            ]
        }
    },
    "more_damage": {
        "type": "origins:modify_projectile_damage",
        "damage_condition": {
            "type": "origins:projectile",
            "projectile": "minecraft:small_fireball"
        },
        "modifier": {
            "operation": "multiply_base_multiplicative",
            "value": 0.5
        }
    },
    "slower": {
        "type": "origins:modify_attribute",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_ammunition",
            "comparison": ">",
            "compare_to": 0
        },
        "attribute": "minecraft:generic.movement_speed",
        "modifier": {
            "operation": "multiply_base_multiplicative",
            "value": -0.5
        }
    }
}