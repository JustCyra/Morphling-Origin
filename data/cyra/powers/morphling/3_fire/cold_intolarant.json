{
    "type": "origins:multiple",
    "hidden": true,
    
    "cold": {
        "type": "origins:resource",
        "min": 0,
        "max": 100,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 8,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cold",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "reset_on_respawn": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:set_resource",
            "resource": "*:*_cold",
            "value": 0
        }
    },
    "tick_cold": {
        "type": "origins:action_over_time",
        "interval": 10,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cold",
                    "operation": "add",
                    "change": -3
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:fluid_height",
                        "fluid": "minecraft:water",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_cold",
                        "operation": "add",
                        "change": 12
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:biome",
                        "condition": {
                            "type": "origins:temperature",
                            "comparison": "<=",
                            "compare_to": 0.15
                        }
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_cold",
                        "operation": "add",
                        "change": 6
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:on_fire"
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_cold",
                        "operation": "add",
                        "change": -7
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_cold",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    "if_action": {
                        "type": "origins:grant_power",
                        "power": "cyra:morphling/3_fire/temp/cold_debuff",
                        "source": "cyra:morphling/3_fire/cold_intolarant"
                    },
                    "else_action": {
                        "type": "origins:revoke_power",
                        "power": "cyra:morphling/3_fire/temp/cold_debuff",
                        "source": "cyra:morphling/3_fire/cold_intolarant"
                    }
                }
            ]
        }
    },
    "on_loss": {
        "type": "origins:action_on_callback",
        "entity_action_lost": {
            "type": "origins:revoke_power",
            "power": "cyra:morphling/3_fire/temp/cold_debuff",
            "source": "cyra:morphling/3_fire/cold_intolarant"
        }
    },
    "more_freeze_damage": {
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:name",
            "name": "freeze"
        },
        "modifier": {
            "operation": "multiply_base",
            "value": 4
        }
    }
}