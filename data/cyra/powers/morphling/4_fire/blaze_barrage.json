{
    "type": "origins:multiple",
    "name": "Blaze Barrage",
    "description": "Upon usage, you focus and fire up to 7 small fireball blasts.\nUnline before, these ones are much more accurate.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Active ability, use with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": [
                "Fires 1 small fireball on use that knocks you back",
                "\nKnockback can be prevented when crouching"
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": [
                "Interval: 0.3 seconds",
                "\nCharges: 7",
                "\nCharge cooldown: 1.5 seconds"
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": {
                "text": "Changes on ",
                "extra": [
                    {
                        "text": "[",
                        "color": "gray",
                        "extra": [
                            {
                                "text": "Morphling V",
                                "color": "dark_purple"
                            },
                            {
                                "text": "]"
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "count": {
        "type": "origins:resource",
        "min": 0,
        "max": 7,
        "start_value": 7,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 7,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_count",
                "comparison": "<",
                "compare_to": 7
            }
        }
    },
    "reset_on_respawn": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:set_resource",
            "resource": "*:*_count",
            "value": 7
        }
    },
    "recharge": {
        "type": "origins:action_over_time",
        "interval": 25,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_count",
                    "comparison": "<",
                    "compare_to": 7
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_fire",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_count",
            "change": 1
        }
    },
    "more_damage": {
        "type": "origins:modify_projectile_damage",
        "damage_condition": {
            "type": "origins:projectile",
            "projectile": "minecraft:small_fireball"
        },
        "modifier": {
            "operation": "multiply_base_multiplicative",
            "value": 0.5
        }
    },
    "fire": {
        "type": "origins:active_self",
        "cooldown": 6,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_count",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "apugli:fire_projectile",
                    "entity_type": "minecraft:small_fireball",
                    "tag": "{Tags: [\"morphling_fireball\"]}",
                    "count": 1,
                    "speed": 0.25,
                    "divergence": 2.0,
                    "sound": "minecraft:entity.blaze.shoot"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_count",
                    "change": -1
                },
                {
                    "type": "origins:exhaust",
                    "amount": 0.9
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:on_block"
                    },
                    "if_action": {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:sneaking",
                            "inverted": true
                        },
                        "if_action": {
                            "type": "origins:add_velocity",
                            "x": 0,
                            "y": 0,
                            "z": -0.15,
                            "space": "local",
                            "set": false
                        }
                    },
                    "else_action": {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:sneaking",
                            "inverted": true
                        },
                        "if_action": {
                            "type": "origins:add_velocity",
                            "x": 0,
                            "y": 0,
                            "z": -0.35,
                            "space": "local",
                            "set": false
                        }
                    }
                }
            ]
        }
    }
}