{
    "type": "origins:multiple",
    "name": "Throw Mass",
    "description": "You can quickly shift yourself and lounge forward at will.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Active ability. Use with %s"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Cooldown: 10 seconds"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/arrow_up.png",
            "text": {
                "text": "Changes on ",
                "extra": [
                    {
                        "text": "[",
                        "color": "gray",
                        "extra": [
                            {
                                "text": "Morphling III",
                                "color": "red"
                            },
                            {
                                "text": "]"
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "active": {
        "type": "origins:active_self",
        "cooldown": 200,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 1
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "entity_action": {
            "type": "apugli:fire_projectile",
            "entity_type": "minecraft:potion",
            "tag": "{Tags: [\"morphling_water\"], Item:{id:\"minecraft:cyan_dye\",Count:1b,tag:{Enchantments: [{}], Potion:\"minecraft:water\"}}}",
            "count": 1,
            "speed": 0.75,
            "divergence": 1.0,
            "sound": "minecraft:ambient.underwater.enter",
            "bientity_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:mount"
                    },
                    {
                        "type": "origins:actor_action",
                        "action": {
                            "type": "origins:execute_command",
                            "command": "function cyra:morphling/size/throw_self_hitbox"
                        }
                    }
                ]
            }
        }
    },
    "projectile": {
        "type": "apugli:projectile_action_over_time",
        "interval": 2,
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:nbt",
                "nbt": "{Tags: [\"morphling_water\"]}"
            }
        },
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:apply_effect",
                        "effect": {
                            "effect": "minecraft:invisibility",
                            "duration": 3,
                            "amplifier": 0,
                            "is_ambient": false,
                            "show_particles": false,
                            "show_icon": false
                        }
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:riding"
                    },
                    "if_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:spawn_particles",
                            "particle": {
                                "type": "minecraft:dust",
                                "params": "0.5 0.5 1.0 1"
                            },
                            "count": 2,
                            "speed": 0.3,
                            "force": false,
                            "offset_y": 0.0,
                            "spread": {
                                "x": 0.0,
                                "y": 0.0,
                                "z": 0.0
                            }
                        }
                    },
                    "else_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:execute_command",
                            "command": "kill @s"
                        }
                    }
                }
            ]
        }
    },
    "invisible": {
        "type": "origins:action_over_time",
        "interval": 5,
        "condition": {
            "type": "origins:riding",
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:nbt",
                    "nbt": "{Tags: [\"morphling_water\"]}"
                }
            }
        },
        "rising_action": {
            "type": "origins:execute_command",
            "command": "execute if entity @s[pehkui.scale_type=pehkui:hitbox_width, pehkui.scale=0.2..] run function cyra:morphling/size/throw_self_hitbox"
        },
        "falling_action": {
            "type": "origins:execute_command",
            "command": "function cyra:morphling/size/forms/small"
        }
    }
}