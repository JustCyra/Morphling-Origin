{
    "type": "origins:action_on_callback",
    "name": "Ever Changing",
    "description": "You ever so evolving, constantly changing and improving\nThe following advancement will evolve you further:\n\n Hot Tourist Destinations",
    "entity_action_added": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:delay",
                "ticks": 1,
                "action": {
                    "type": "origins:execute_command",
                    "command": "function cyra:morph/size_nether"
                }
            },
            {
                "type": "origins:delay",
                "ticks": 10,
                "action": {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:advancement",
                        "advancement": "cyra:morph/stages/fire_body",
                        "inverted": true
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "advancement grant @s only cyra:morph/stages/fire_body"
                    }
                }
            },
            {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:advancement",
                    "advancement": "minecraft:nether/explore_nether"
                },
                "if_action": {
                    "type": "origins:execute_command",
                    "command": "advancement revoke @s only minecraft:nether/explore_nether"
                }
            },
            {
                "type": "origins:delay",
                "ticks": 1,
                "action": {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:gamemode",
                                "gamemode": "spectator",
                                "inverted": true
                            },
                            {
                                "type": "origins:status_effect",
                                "effect": "minecraft:invisibility",
                                "inverted": true
                            }
                        ]
                    },
                    "if_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "particle minecraft:flame ~ ~0.8 ~ 0.2 0.4 0.15 0 50"
                            },
                            {
                                "type": "origins:delay",
                                "ticks": 9,
                                "action": {
                                    "type": "origins:execute_command",
                                    "command": "particle minecraft:flame ~ ~0.8 ~ 0.2 0.4 0.2 0.75 75"
                                }
                            }
                        ]
                    }
                }
            }
        ]
    },
    "entity_action_lost": {
        "type": "origins:execute_command",
        "command": "scale reset @s"
    }
}